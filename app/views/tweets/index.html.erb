<%= render "header" %>

<h1>linkpuller: All links</h1>

<table>
<% @tweets.each do |tweet| %>  
  <tr>
    <td><%= tweet.text %></td>
    <td><%= tweet.url %></td>
    <td><%= tweet.domain %></td>
    <td><%= @domain_counts[tweet.domain] %></td>    
    <td><%= tweet.tweet_date.strftime("%m/%d/%Y") %></td>
    <td><%= TwitterName.find_by_twitter_name_id(tweet.twitter_name_id).username %></td>
  </tr>

 <!--  <h3><%=tweet.text%></h3>
  <a href="http://<%=tweet.url%>"><%=tweet.url%></a>
  <hr> -->
<% end %>
</table>
