<table class="table table-hover table-bordered table-condensed">
<% @last_tweet_domain = "" %>
<% @tweets.each do |tweet| %>  
  <tr >
    <% if @last_tweet_domain != tweet.domain %>
      <td rowspan="<%= @domain_counts[tweet.domain] %>"><a href="<%= tweet.domain %>"><%= tweet.domain %></a></td>    
      <td rowspan="<%= @domain_counts[tweet.domain] %>"><%= @domain_counts[tweet.domain] %></td>
    <% end %>
    <td><a href="<%= tweet.url %>"><%= tweet.url %></a></td>
    <td><%= tweet.text %></td>
    <td><%= tweet.tweet_date.strftime("%m/%d/%Y") %></td>
    <td><%= TwitterName.find_by_twitter_name_id(tweet.twitter_name_id).username %></td>
  </tr>
<% @last_tweet_domain = tweet.domain %>
<% end %>
</table>